{#
/**
 * @file
 * IP Cards Group paragraph bundle.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'paragraph-widget',
    'paragraph-widget--ip_cards',
  ]
%}

{% block paragraph %}
	<div{{attributes.addClass(classes).setAttribute('id','ip_cards-'~paragraph.id())}}>
		<section class="card-group">
			<div class="silc-grid silc-grid--justify-center">
				{{ content.field_ip_cg_item }}
			</div>

			{{ content|without('field_ip_cg_item', 'field_ip_cg_columns', 'field_ip_cg_type') }}
		</section>
	</div>
{% endblock %}