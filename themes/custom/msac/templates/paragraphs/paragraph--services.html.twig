{#
/**
 * @file
 * IP Accordion paragraph bundle.
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'paragraph-widget',
    'paragraph-widget--services'
  ]
%}

{% block paragraph %}
	<div{{attributes.addClass(classes).setAttribute('id','ip_accordion-'~paragraph.id())}}>
		{% block content %}
			<div class="silc-accordion" id="accordion-{{ paragraph.id() }}" data-silc-accordion-animated data-silc-accordion-open-multiple>
				  {% for key, item in content.field_services_items %}
				  {% if key|first != '#' %}
						<div class="silc-accordion__section">
							<button id="accordion-{{ paragraph.id() }}-section-{{ loop.index }}-label" class="silc-accordion__label" aria-controls="accordion-{{ paragraph.id() }}-section-{{ loop.index }}-content">
								{{ item['#paragraph'].field_services_item_title.value }}
								<svg class="silc-accordion__label-icon" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
									<g fill-rule="evenodd"><path d="M12 0c6.627 0 12 5.373 12 12s-5.373 12-12 12S0 18.627 0 12 5.373 0 12 0zm0 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2z"/><path d="M10.907 6v4.908H6v2.185h4.907V18h2.185v-4.907H18v-2.185h-4.908V6z"/></g>
								</svg>
							</button>
							<div class="silc-accordion__content" id="accordion-{{ paragraph.id() }}-section-{{ loop.index }}-content" aria-labelledby="accordion-{{ paragraph.id() }}-section-{{ loop.index }}-label">
								<div class="silc-accordion__content-compartment">
									{{ item['#paragraph'].field_services_item_text.value|raw }}
								</div>
							</div>
						</div>
					{% endif %}
					{% endfor %}
			</div>
		{% endblock %}
	</div>
{% endblock paragraph %}
