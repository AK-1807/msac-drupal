<div>
  <h4 class="visible-for-screen-readers" id="work-title-{{ node.id }}">{{ node.title.value }}</h4>
	<figure class="iframe">
		<div class="iframe__media-wrapper">
			{{ content.field_work_video }}
		</div>
    {% set work_details %}
      {% if content.field_work_description|field_value %}
    	  <div class="work__description">{{ content.field_work_description }}</div>
      {% endif %}
      {% if content.field_work_medium|field_value %}
        <div class="work__medium"><strong>Medium: </strong>{{ content.field_work_medium|field_value }}</div>
      {% endif %}
      {% if content.field_work_year|field_value %}
        <div class="work__year"><strong>Year: </strong>{{ content.field_work_year|field_value }}</div>
      {% endif %}
      {% if content.field_work_details|field_value %}
        <div class="work__details"><strong>Details: </strong>{{ content.field_work_details|field_value }}</div>
      {% endif %}
    {% endset %}
    {% if work_details|striptags|trim is not empty %}
      <a href="#work-info-{{ node.id }}" class="work__more-info">See more<span class="visible-for-screen-readers"> information about {{ node.title.value }}</span></a>
      <div id="work-info-{{ node.id }}" class="work__info work__info--video" role="region" aria-labelledby="work-title-{{ node.id }}">
        {{ work_details }}
      </div>
    {% endif %}
	</figure>
</div>
