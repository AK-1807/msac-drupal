								<a href="{{ content.field_home_features.3['#paragraph'].field_home_feature_link.0.url }}">
								{% endif %}
								<div class="home-callout-grid__feature" style="background-image:url({{ content.field_home_features.3['#paragraph'].field_home_feature_image.entity.fileuri | image_style('optimized') }})">
									<div class="home-callout-grid__feature-content">
										<span class="home-callout-grid__feature-category">{{ content.field_home_features.3['#paragraph'].field_home_feature_category.value }}</span>
										<span class="home-callout-grid__feature-title">{{ content.field_home_features.3['#paragraph'].field_home_feature_content.value }}</span>
									</div>
								</div>
								{% if content.field_home_features.3['#paragraph'].field_home_feature_link.0 %}
								</a>
							{% endif %}
						{% endif %}
					</div>
					<div class="home-callout-grid__item">
						{% if content.field_home_features.4['#paragraph'].field_home_feature_category.value is not empty and content.field_home_features.4['#paragraph'].field_home_feature_content.value is not empty and content.field_home_features.4['#paragraph'].field_home_feature_image.entity.fileuri is not empty %}
