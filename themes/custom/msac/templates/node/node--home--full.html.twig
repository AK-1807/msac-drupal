								<div class="home-callout-grid__feature" style="background-image:url({{ content.field_home_features.2['#paragraph'].field_home_feature_image.entity.fileuri | image_style('homepage_feature') }})">
									<div class="home-callout-grid__feature-content">
										<span class="home-callout-grid__feature-category">{{ content.field_home_features.2['#paragraph'].field_home_feature_category.value }}</span>
										<span class="home-callout-grid__feature-title">{{ content.field_home_features.2['#paragraph'].field_home_feature_content.value }}</span>
									</div>
								</div>
								{% if content.field_home_features.2['#paragraph'].field_home_feature_link.0 %}
								</a>
							{% endif %}
						{% endif %}
					</div>
					<div class="home-callout-grid__item">
						{% if content.field_home_cta.0['#paragraph'].field_cta_head.value is not empty and content.field_home_cta.0['#paragraph'].field_cta_subhead.value is not empty and content.field_home_cta.0['#paragraph'].field_cta_link[0].title is not empty and  content.field_home_cta.0['#paragraph'].field_cta_link[0].uri is not empty %}
							<div class="home-callout-grid__cta">
								<div class="home-callout-grid__cta-statistic">
									<svg class="icon" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 79 77">
										<g stroke="#EC0000" stroke-width="4" fill="none" fill-rule="evenodd" stroke-linecap="square"><path d="M59.912 3.097L36.006 73.903M43.578 3.097L19.673 73.903M76.245 3.097L52.34 73.903M27.245 3.097L3.34 73.903"/></g>
									</svg>
									<p>{{ content.field_home_cta.0['#paragraph'].field_cta_head.value }}</p>
								</div>
								<div class="home-callout-grid__cta-impact">
									<p>{{ content.field_home_cta.0['#paragraph'].field_cta_subhead.value }}</p>
									<a href="{{ content.field_home_cta.0['#paragraph'].field_cta_link[0].uri }}" class="button button--white">{{ content.field_home_cta.0['#paragraph'].field_cta_link[0].title }}</a>
								</div>
							</div>
						{% endif %}
					</div>
					<div class="home-callout-grid__item">
