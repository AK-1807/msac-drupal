						{% endif %}
					</div>
				</div>
			</div>
		</div>
		<div class="home-footer-cta">
			{% if content.field_home_footer_text|field_value or content.field_home_footer_image|field_value %}
				<div class="outer-pad">
					<div class="silc-grid silc-grid--collapse silc-grid--align-center">
						<div class="silc-grid__col silc-grid__col--1-1200 silc-grid__col--2-1440 silc-display--none silc-display--block-1200"></div>
						<div class="silc-grid__col silc-grid__col--6-1024 silc-grid__col--5-1200">
							{% if content.field_home_footer_text|field_value %}
								<div class="home-footer-cta__content">
									{{ content.field_home_footer_text}}
								</div>
							{% endif %}
						</div>
						<div class="silc-grid__col silc-grid__col--6-1024 silc-grid__col--5-1200 silc-grid__col--4-1440">
							{% if content.field_home_footer_image|field_value %}
								<div class="home-footer-cta__governors-image">
									{{ content.field_home_footer_image}}
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			{% endif %}
		</div>
	</div>
